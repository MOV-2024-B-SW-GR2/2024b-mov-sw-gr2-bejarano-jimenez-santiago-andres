<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEditarPropietario"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombreEditarPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etFechaEditarPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha Nac. (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/etIdentificacionEditarPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IdentificaciÃ³n" />

    <Button
        android:id="@+id/btnGuardarPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios" />
</LinearLayout>
